/* page/addservice/addservice.wxss */

.container {
  background-color: #f8f8f9;
}

.bigInput {
  height: 160rpx;
  display: flex;
}

.row {
  display: flex;
  align-items: center;
  margin-bottom: 0.8rem;
}

.row text {
  flex-grow: 1;
  text-align: left;
  margin: 0.5rem;
}

.row input {
  font-size: 0.7rem;
  flex-grow: 2;
  border: 1px solid #09c;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #aaa;
  padding: 0.3rem;
}

.row textarea {
  height: 150rpx;
  font-size: 0.8rem;
  flex-grow: 2;
  border: 1px solid #09c;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #aaa;
  padding: 0.5rem;
}

.row-button {
  display: flex;
  align-items: center;
  margin: 1rem;
}

.row button {
  padding: 0 2rem;
  margin: 3rem 1rem;
}

.section-stimage {
  background-color: #ffffff;
  height: 160px;

}

.big-logo {
  height: 100px;
  width: 100px;
  position: absolute;
}

.logoinfos {
  height: 95px;
  width: 95px;
  border: 1px solid #09c;
}

.logoinfo {
  height: 80px;
  width: 80px;
  position: absolute;
  margin: 0.5rem;
  z-index: 2;
}

.big-logof {
  display: none;
}
