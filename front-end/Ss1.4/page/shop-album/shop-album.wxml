<!--page/shop-album/shop-album.wxml-->
<i-tabs current="{{ current }}" bindchange="handleChange">
    <i-tab key="tab1" title="证书图片"></i-tab>
    <i-tab key="tab2" title="商铺图片"></i-tab>
</i-tabs>

<scoll-view class="container" scroll-y="true" enable-back-to-top="true">
    <view class="album-container">
        <view class="item-group" wx:for="{{layoutList}}" wx:key="group">
            <block wx:for="{{group}}" wx:key="item">
                <block wx:if="{{item}}">
                    <image bindtap="enterPreviewMode" bindlongtap="showActions" data-src="{{item}}" class="album-item" src="{{item}}" mode="aspectFill"></image>
                </block>
                <block wx:else>
                    <view class="album-item empty"></view>
                </block>
            </block>
        </view>
    </view>
    
    <view class="upload-image" bindtap="upimg">
        <image src="/images/camera.png" mode="aspectFit"></image>
        <text>上传图片</text>
    </view>
</scoll-view>