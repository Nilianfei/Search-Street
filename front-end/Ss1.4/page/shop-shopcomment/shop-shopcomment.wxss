/* page/shop-shopcomment/shop-shopcomment.wxss */
page {
  height: 100%;
}
/*切换栏*/
.swiper-tab {
  height: 40px;
  line-height: 40px;
  background: #3B3B3B;
  color:#fff ;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom:1px solid black;
}
 
.swiper-tab-list {
  margin:10rpx;
  padding: 0 4px;
  font-size: 15px;
}
 
.on {
  border-bottom:2px solid #fff;
  color: #f5f5f5;
}

 .swiper-box
{
  height: 100%
}
 
/*订单列表*/
.orderDetails {
  background: #fff;
  border-bottom: 20rpx solid #f5f5f5;
}
 
.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #BEBEBE;
}
 
.orderListTitle .userName {
  padding-right: 50rpx;
  margin-left:10px;
}
 
.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #2f7b27;
  font-size: 34rpx;
}
 
.orderListDetails {
  display: flex;
  height: 300rpx;
  border-bottom: 1rpx solid #f3f3f3;
  padding-bottom:10rpx;
  align-content: space-around;
}
 
.orderListDetails .productImg {
  flex: 1;
  height:200rpx;
  width:140px;
  margin-top: 40rpx;
  margin-left: 20rpx;
}
 
.orderListDetails .productImg image {
  width: 100px;
  height: 90%;
}
 
.orderListDetails .productInfo {
  flex: 4;
  margin: 30rpx 10px 20px 30rpx;
  font-size:15px;
 
}
 
.orderListDetails .productInfo .productTitle {
  font-size:15px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom:10px;
}
 
.productReply {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
  flex-direction: row;
}
 
.Reply {
  float: left;
  margin-left: 30rpx;
}
